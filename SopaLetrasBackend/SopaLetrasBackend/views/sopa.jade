doctype html
html
  head    
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Sopa de Letras
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/styles_sopa.css')   

  body
    #container1
      h1 CREA TU SOPA
      br
      br
      #container
        .row
          .col-sm-9.col-md-9
            form(name='miFormulario', method='POST', action='/sopa')
              label#titulolabel TÍTULO
              input#titulo(type='text' name='titulo', maxLength = '40', required='')
              br
              br
              br
              label#descripcionlabel DESCRIPCIÓN
              input#descripcion(type='text', , maxLength = '100', name='descripcion', required='')
              br
              br
              br
              label#numerolabel NÚMERO DE PALABRAS
              input#numero(type='number', name='numero', min='1', max='15', value='1', required='', onkeyup="if(this.value>15){this.value='15';}else if(this.value<1){this.value='1';}")
              button#check(onclick='validar();mostrar();')
                i.glyphicon.glyphicon-check                
              br
              br
              .visible-lg.visible-sm
                br          
              #mostrar            
            #generar
          .col-sm-3.col-md-3
             img#sopa2(src='images/sopa2.png', alt='prueba')
    #container2(style='display:none')
      .col-md-8.col-sm-8
         .row
            #sopaT
         .row
            #sopaD
      .col-md-1.col-sm-1  
      #tablero.col-md-3.col-sm-3
        .row
          .col-md-4.col.sm-4
              h4 Usuario:
          .col-md-8.col.sm-8
          h4#usuario Usuario
        .row
          .col-md-4.col.sm-4
              h4 Puntos:
          .col-md-8.col.sm-8
          h4#puntos Puntos
        br
        #countdownExample 
            .values
      .row
        #table.col-md-9.col-sm-9        
        #lista.col-md-2.col-sm-2
      br
      .row
        .col-md-5
        .col-md-2
          button#verificar(onclick='verifica()')
            span.glyphicon.glyphicon-check
        .col-md-5
    
    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')       
    script(src='/javascripts/palabras.js')
    script(src='/javascripts/jquery.bootstrap-growl.min.js')
    script(src='/javascripts/easytimer.min.js')

