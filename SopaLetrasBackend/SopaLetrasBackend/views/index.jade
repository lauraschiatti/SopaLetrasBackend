extends layout

block content
    .container
      h1 CREA TU SOPA DE LETRAS
      h2 ...y después juégala
    br
    br
    .row.container
      .col-sm-9.col-md-9
        img#sopa(src='images/sopa.png', alt='sopa')
      br
      br
      .col-sm-1.col-md-1
        a.btn.i2.item Iniciar sesión
        a.btn.i3.item(href='/usuarios/registrar') Registrarse
      .col-sm-1.col-md-1
        a.btn.btn-default.orange-circle-button(style='display: none', href='sopa.html', role='button')
          span.glyphicon.glyphicon-play(aria-hidden='true')

    // Modal Iniciar sesión
    //#iniciarsesion.modal.fade(tabindex='-1', role='dialog', aria-labelledby='iniciarsesionlabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#iniciarsesionlabel.modal-title Iniciar sesión
          .modal-body
            form(onsubmit='IniciarSesion();')
              .form-group
                label#emaill(for='emailinput') Correo electrónico
                .input-group
                  span.input-group-addon
                    span.glyphicon.glyphicon-envelope
                  input#emailinput.form-control(type='email', pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$', title='Email', required='')
              .form-group
                label#contrasena(for='passw') Contraseña
                .input-group
                  span.input-group-addon
                    span.glyphicon.glyphicon-lock
                  input#passw.form-control(type='password', name='password', title='Contraseña', required='')
              input#iniciar.btn.btn-danger.btn-block(type='submit', value='OK')
          //
            <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
            </div>

   